<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PackageTracking">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
        <EditText
                android:id="@+id/zippySearch"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:inputType="number"
                android:background="@drawable/roundedtext"
                android:hint="Enter Airwaybill Number"/>
        <ImageButton
                android:id="@+id/btnScan"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/ic_qier"/>
        <ImageButton
                android:id="@+id/btnZippySearch"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/ic_search_black_24dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp">
        <TextView
                android:id="@+id/mesaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="18dp"
                android:fontFamily="@font/robotomediumitalic"/>
        <TextView
                android:id="@+id/trackingAwb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="14dp"
                android:fontFamily="@font/robotomediumitalic"/>
        <TextView
                android:id="@+id/senderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="14dp"
                android:fontFamily="@font/robotomedium"/>
        <TextView
                android:id="@+id/trackingSenderNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/trackingSenderAddressView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/trackingSenderCityStateZipView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/trackingAmericaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/recipientDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="14dp"
                android:fontFamily="@font/robotomedium"/>
        <TextView
                android:id="@+id/trackingRecipientNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/trackingRecipientAddressView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/trackingRecipientCityStateZipView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        <TextView
                android:id="@+id/trackingAmericaaas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/shipmentAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/robotomedium"
                    android:text=""/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>