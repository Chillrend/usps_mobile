<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:context=".about">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_sb"/>
    <TextView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="USPS Postal Service Mobile Application"
            android:fontFamily="@font/robotomediumitalic"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="USPS ( United States Postal Service ) Adalah merk dagang dari United States Postal Service,
            Amerika Serikat"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Logo &quot;USPS&quot; dan &quot;USPS.com&quot; adalah properti milik United States Postal Service"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Aplikasi ini dibuat hanya untuk kepentingan akademik"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Developer"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Muhamamad Farhan Hanif"
            android:gravity="center"
            android:textSize="14sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mochammad Hendhy Sumaryo"
            android:gravity="center"
            android:textSize="14sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Library Used"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Google zxing"
            android:gravity="center"
            android:textSize="14sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="hdodenhoff circle imageview"
            android:gravity="center"
            android:textSize="14sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="daimaijia carousel"
            android:gravity="center"
            android:textSize="14sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Google Simple JSON"
            android:gravity="center"
            android:textSize="14sp"/>

</LinearLayout>