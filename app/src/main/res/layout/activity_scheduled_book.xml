<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".scheduledBook">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Recipient Information"
                    android:textSize="14dp"
                    android:fontFamily="@font/robotomedium"/>
            <EditText
                    android:id="@+id/recipientNameBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_directions_walk_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="Recipient Name"/>
            <EditText
                    android:id="@+id/recipientAddressBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="Recipient Address"/>
            <EditText
                    android:id="@+id/recipientZipBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Recipient Zip Code"
                    android:drawableLeft="@drawable/ic_local_post_office_black_24dp"
                    android:drawablePadding="10dp"
                    android:inputType="number"/>
            <EditText
                    android:id="@+id/recipientTelBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="Recipient Telephone Number"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Package Information"
                    android:textSize="14dp"
                    android:fontFamily="@font/robotomedium"/>
            <EditText
                android:id="@+id/weightBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fitness_center_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Weight"/>
            <EditText
                    android:id="@+id/whenPickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:drawablePadding="10dp"
                    android:editable="false"
                    android:clickable="true"
                    android:hint="Pickup Time"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Shipment Method"
                    android:textSize="14dp"
                    android:fontFamily="@font/robotomedium"/>
            <Spinner
                    android:id="@+id/shipmentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Submit"
                    android:id="@+id/btnSambid"
                    android:background="@drawable/btn_yellow"
                    android:layout_gravity="center_horizontal"
                    />
        </LinearLayout>
    </ScrollView>


</LinearLayout>